<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
　<div><%= link_to 'followings (' + @user.following_users.count.to_s + ')' , followings_user_path(@user) %></div>
　<div><%= link_to 'followers ('+ @user.follower_users.count.to_s + ')', followers_user_path(@user) %></div>
</div>